    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelloCookBook"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ChangePassword"
            android:exported="false" />
        <activity
            android:name=".EditAccount"
            android:exported="false" />
        <activity
            android:name=".AccountDetails"
            android:exported="false" />
        <activity
            android:name=".ProcedureMenu"
            android:exported="false" />
        <activity
            android:name=".AddProcedure"
            android:exported="false" />
        <activity
            android:name=".ViewProcedures"
            android:exported="false" />
        <activity
            android:name=".IngredientMenu"
            android:exported="false" />
        <activity
            android:name=".AddIngredient"
            android:exported="false" />
        <activity
            android:name=".ViewIngredients"
            android:exported="false" />
        <activity
            android:name=".RecipeMenu"
            android:exported="false" />
        <activity
            android:name=".AddRecipe"
            android:exported="false" />
        <activity
            android:name=".SignUp"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Light.ActionBar" />
    </application>

</manifest>